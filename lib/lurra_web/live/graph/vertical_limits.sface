<div>
  <Form for={:vertical_limits} change="change" class="long-field" submit="save">
    <Field name={:max}>
      <Label>Max value</Label>
      <NumberInput value={@max} opts={step: :any}/>
    </Field>
    <Field name={:min}>
      <Label>Min value</Label>
      <NumberInput value={@min} opts={step: :any}/>
    </Field>
    <Submit label="Save" /> 
  </Form>
</div>